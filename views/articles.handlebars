<div id="page-body" class="container">
    <div class="header-div">
        <h1 class="header-h1">Saved Articles</h1>
        <button class="btn btn-outline-primary spacer" id="home-btn">Home</button>
        <button class="btn btn-outline-primary" id="scrape-btn">Scrape Articles</button>
    </div>

    {{#each results}}
        <div class="article-div row" data-article-id="{{_id}}">
            <div class="col-md-9">
                <a href="{{link}}" class="article-link">{{title}}</a>
            </div>
            <div class="col-md-3">
                <button class="btn btn-outline-primary my-2 notes-btn" data-article-id="{{_id}}" data-text="{{title}}" data-link="{{link}}">Notes</button>
                <button class="btn btn-outline-danger my-2 delete-btn" data-article-id="{{_id}}" data-text="{{title}}" data-link="{{link}}">Delete</button>
            </div>
        </div>
    {{/each}}
</div>

